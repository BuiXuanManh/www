<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default" >
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <!-- Đường dẫn đến cơ sở dữ liệu MariaDB -->
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/week2"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="sapassword"/>

            <!-- Sử dụng driver MariaDB -->
            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>

            <!-- Dialect cho Hibernate, tùy theo phiên bản Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>

            <!-- Auto generate bảng nếu cần -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
